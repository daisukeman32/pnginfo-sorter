{
  "name": "pnginfo-sorter",
  "version": "1.0.0",
  "description": "PNG画像のメタデータを読み取って自動仕分けするツール",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "png",
    "metadata",
    "sorter",
    "electron"
  ],
  "author": "daisukeman32",
  "license": "MIT",
  "build": {
    "appId": "com.local.pnginfo-sorter",
    "productName": "PNG Sorter",
    "icon": "build/icon.png",
    "win": {
      "target": "portable",
      "icon": "build/icon.png"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
